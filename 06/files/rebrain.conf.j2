server {
  server_name   {{ a }};
  listen        0.0.0.0:80;

  location / {
    auth_basic "RESTRICTED";
    auth_basic_user_file /etc/nginx/passwdfile;
    try_files DUMMY @return200;
  }

  location @return200 {
    return 200;
  }

  location /auth/off/ {
    auth_basic off;
    return 200;
  }
}
